@page

<div class="container">
    <div class="row">
        <div class="col-12">
            <h5 id="UserDetails"></h5>
        </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-4">Add To Group</div>
            <div class="col-lg-4 col-md-6 col-sm-8"><input type="text" class="form-control" id="groupInput" /></div>
        </div>
        <div class="row mt-1">
            <div class="col-lg-2 col-md-2 col-sm-4">User ID</div>
            <div class="col-lg-4 col-md-6 col-sm-8"><input type="text" class="form-control" id="userInput" /></div>
        </div>
        <div class="row mt-1">
            <div class="col-lg-2 col-md-2 col-sm-4">Message</div>
            <div class="col-lg-4 col-md-6 col-sm-8"><input type="text" class="form-control" id="messageInput" /></div>
        </div>

        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-lg-2 col-md-3 col-sm-3">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
            <div class="col-lg-2 col-md-4 col-sm-4">
                <input type="button" id="groupButton" value="Add to Group" />
            </div>
            <div class="col-lg-2 col-md-5 col-sm-5">
                <input type="button" id="sendGroupButton" value="Send Group Message" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
